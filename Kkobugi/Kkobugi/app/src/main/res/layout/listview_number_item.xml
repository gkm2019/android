<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/colorWhite"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rl"
            android:gravity="center_vertical"
            android:background="@color/colorWhite"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingRight="15dp">

            <TextView
                android:id="@+id/text_numDepartment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:text="학과명"
                android:textColor="#000000"
                android:background="@color/colorWhite"
                android:textSize="20dp" />

        </RelativeLayout>



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_below="@+id/rl"
            android:gravity="center_vertical"
            android:background="@color/colorWhite"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/text_number_"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="유선 번호"
                android:textSize="18dp"
                android:fontFamily="@font/joseonilbomyeongjo"
                android:textColor="#737373"
                android:background="@color/colorWhite"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp">

            </TextView>
            <TextView
                android:id="@+id/text_number"
                android:layout_toRightOf="@+id/text_number_"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="유선 번호"
                android:textSize="18dp"
                android:fontFamily="@font/joseonilbomyeongjo"
                android:textColor="#737373"
                android:background="@color/colorWhite"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp">

            </TextView>
            <TextView
                android:id="@+id/text_numberFax_"
                android:layout_below="@+id/text_number"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="Fax번호"
                android:textSize="18dp"
                android:fontFamily="@font/joseonilbomyeongjo"
                android:textColor="#737373"
                android:background="@color/colorWhite"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp">

            </TextView>
            <TextView
                android:id="@+id/text_numberFax"
                android:layout_toRightOf="@+id/text_numberFax_"
                android:layout_below="@+id/text_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fax번호"
                android:textSize="18dp"
                android:fontFamily="@font/joseonilbomyeongjo"
                android:textColor="#737373"
                android:background="@color/colorWhite"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp">

            </TextView>

        </RelativeLayout>



        <View
            android:id="@+id/view_div"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#333333" />

    </LinearLayout>
</RelativeLayout>